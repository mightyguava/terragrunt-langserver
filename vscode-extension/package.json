{
  "name": "terragrunt-vscode",
  "description": "Terragrunt VSCode Extension",
  "author": "Yunchi Luo",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mightyguava/terraform-langserver"
  },
  "publisher": "terragrunt-vscode",
  "categories": [],
  "keywords": [
    "terragrunt terraform"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onLanguage:hcl"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Terragrunt configuration",
      "properties": {
        "terragrunt.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "terragrunt.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "test": "sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.18.34",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "typescript": "^5.1.3",
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.2.3"
  }
}
